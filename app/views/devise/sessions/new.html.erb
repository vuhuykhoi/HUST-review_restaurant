<!DOCTYPE html>
<html>
  <head>
  	<title>Log in</title>
  </head>
  
  <body>
    <div class="loginbg">
      <div class="login-page">
      	<div class="form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h1 style="text-align: center; margin-bottom: 40px; margin-top: 0;">Log in</h1>
            
            <div class="in-form">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

            

                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off" %>
            </div>
            
              <% if devise_mapping.rememberable? -%>
                <div style="margin-bottom: 20px; font-size: 18px; color: grey;">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            
              <div class="loginbtn">
                <%= f.submit "Log in" %>
              </div>
            <% end %>
            
             <div class="loginbtn--google" >
                 <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>
              </div>

            <div style="text-align: center; font-size: 16px;">
            <%= render "devise/shared/links" %>
            </div>
      	</div>
      </div>
    </div>
  </body>
</html>